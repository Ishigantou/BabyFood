!!!
%html
  %head
    %title BabyFood
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    .navbar.navbar-top
      .navbar-inner
        .container
          %a.btn.btn-navbar(data-target=".nav-collapse" data-toggle="collapse")
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.brand(href="/") BabyFood
          .container.nav-collapse
            %ul.nav.pull-right
              - if current_user
                %li.dropdown
                  = link_to raw(%Q{Logged in as #{current_user.name}<b class="caret"></b>}), '#', class: 'dropdown-toggle', :"data-toggle" => 'dropdown'
                  %ul.dropdown-menu
                    %li= link_to 'Logout', logout_path
              - else
                %li= link_to 'Signup', signup_path
                %li= link_to 'Login', login_path

    .container
      = bootstrap_flash

      = yield
