= form_for @menu do |f|
  - if @menu.errors.any?
    #error_explanation
      %h2= "#{pluralize(@menu.errors.count, "error")} prohibited this menu from being saved:"
      %ul
        - @menu.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :staple_recipe
    = f.text_field :staple_recipe
  .field
    = f.label :main_recipe
    = f.text_field :main_recipe
  .field
    = f.label :side_recipe
    = f.text_field :side_recipe
  .field
    = f.label :comment
    = f.text_area :comment
  .field
    = f.label :photo
    = f.text_area :photo
  .actions
    = f.submit 'Save'
